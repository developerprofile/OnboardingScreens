<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraint_layout_constraint_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/onboarding4_activity_constraint_layout_constraint_layout_background_color">

	<ImageView
		android:id="@+id/bg_image_view"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:scaleType="centerCrop"
		android:src="@drawable/bg"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_weight="1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="0dp"
		tools:layout_editor_absoluteY="0dp"/>

	<ImageView
		android:id="@+id/slide_image_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/onboarding4_activity_slide_image_view_margin_top"
		android:scaleType="center"
		android:src="@drawable/slide"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="149dp"
		tools:layout_editor_absoluteY="93dp"/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/content_constraint_layout"
		android:layout_width="@dimen/onboarding4_activity_content_constraint_layout_width"
		android:layout_height="@dimen/onboarding4_activity_content_constraint_layout_height"
		android:layout_marginBottom="@dimen/onboarding4_activity_content_constraint_layout_margin_bottom"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		tools:layout_editor_absoluteX="35dp"
		tools:layout_editor_absoluteY="492dp">
	
		<Button
			android:id="@+id/skip_this_step_button"
			android:layout_width="@dimen/onboarding4_activity_skip_this_step_button_width"
			android:layout_height="@dimen/onboarding4_activity_skip_this_step_button_height"
			android:background="?attr/selectableItemBackground"
			android:fontFamily="@font/font_karla_bold"
			android:gravity="center"
			android:text="@string/onboarding4_activity_skip_this_step_button_text"
			android:textColor="#FFFFFF"
			android:textSize="@dimen/onboarding4_activity_skip_this_step_button_text_size"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			tools:layout_editor_absoluteX="99dp"
			tools:layout_editor_absoluteY="183dp"/>
	
		<Button
			android:id="@+id/get_started_button"
			android:layout_width="0dp"
			android:layout_height="@dimen/onboarding4_activity_get_started_button_height"
			android:background="?attr/selectableItemBackground"
			android:fontFamily="@font/font_karla_bold"
			android:gravity="center"
			android:text="@string/onboarding4_activity_get_started_button_text"
			android:textColor="#FFFFFF"
			android:textSize="@dimen/onboarding4_activity_get_started_button_text_size"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="0dp"
			tools:layout_editor_absoluteY="74dp"/>
	
		<TextView
			android:id="@+id/plan_ahead_your_expe_text_view"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/onboarding4_activity_plan_ahead_your_expe_text_view_margin_end"
			android:layout_marginStart="@dimen/onboarding4_activity_plan_ahead_your_expe_text_view_margin_start"
			android:fontFamily="@font/font_karla_bold"
			android:gravity="center"
			android:lineSpacingMultiplier="0.92"
			android:text="@string/onboarding4_activity_plan_ahead_your_expe_text_view_text"
			android:textColor="#FFFFFF"
			android:textSize="@dimen/onboarding4_activity_plan_ahead_your_expe_text_view_text_size"
			app:layout_constraintHorizontal_weight="0.9"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="16dp"
			tools:layout_editor_absoluteY="0dp"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>